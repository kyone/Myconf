;; DEL works like it should
(global-set-key [delete] 'delete-char)
;; Writes backup within the file
(setq backup-inhibited)
;; Allows mouse-wheeling
(mouse-wheel-mode 1)
;; Allows selection delete
(delete-selection-mode 1)

;; Shows syntaxic coloration
(global-font-lock-mode)
;; Shows columns numbers
(column-number-mode 1)
;; Shows the couples
(show-paren-mode 1)
;; Shows the Speedbar (sometime pissy under SSH)
;;(speedbar 1)
;; Shows selected region
(transient-mark-mode 1)
;; Shows filename is the window's titlebar
(setq frame-title-format "%b")
;; Unshows the menu bar
(menu-bar-mode 0)
;; Unshows the tool bar
(tool-bar-mode 0)